@model MesaListo.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Editar Reserva #@Model.Id</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ClienteId" />

                        <div class="form-group mb-4">
                            <label asp-for="FechaHora" class="form-label fw-bold">Fecha y Hora</label>
                            <input asp-for="FechaHora" class="form-control" type="datetime-local" />
                            <span asp-validation-for="FechaHora" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="MesaId" class="form-label fw-bold">Mesa</label>

                            @if (User.IsInRole("Restaurante"))
                            {
                                <!-- Mostrar la mesa seleccionada pero deshabilitada -->
                                <select asp-for="MesaId" class="form-control" asp-items="ViewBag.MesaId" disabled="disabled"></select>
                                <input type="hidden" asp-for="MesaId" /> <!-- Mantiene el valor en el form -->
                            }
                            else
                            {
                                <!-- Admin puede editar -->
                                <select asp-for="MesaId" class="form-control" asp-items="ViewBag.MesaId"></select>
                            }

                            <span asp-validation-for="MesaId" class="text-danger small"></span>
                        </div>


                        <div class="form-group mb-4">
                            <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                            <select asp-for="Estado" class="form-control" asp-items="ViewBag.Estados"></select>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>

                        <div class="card mb-4">
                            <div class="card-body bg-light">
                                <h6 class="card-title"><i class="fas fa-user me-2"></i>Información del Cliente</h6>
                                <p class="mb-0">@Model.Cliente?.Email</p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Actualizar Reserva
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}